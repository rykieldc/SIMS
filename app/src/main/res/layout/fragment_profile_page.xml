<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4A5A5"
    tools:context=".ProfilePage">

    <!-- Back Button and Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow"
            android:layout_marginEnd="8dp"
            app:tint="#A00000"
            tools:ignore="UseAppTint" />

        <!-- Title: Profile -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="#A00000"
            android:textStyle="bold"
            android:textSize="20sp" />

    </LinearLayout>

    <!-- Profile Section Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/profile_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_background"
                android:contentDescription="Profile Image"
                android:padding="10dp"/>

            <!-- Name Section -->
            <TextView
                android:id="@+id/profile_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="Jedda Kidlongan"
                android:textColor="#AD4B4B"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="NAME"
                android:textColor="#AD4B4B"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Username Section -->
            <TextView
                android:id="@+id/profile_username_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="user01"
                android:textColor="#AD4B4B"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_username_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="USERNAME"
                android:textColor="#AD4B4B"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Role Section -->
            <TextView
                android:id="@+id/profile_role_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="User"
                android:textColor="#AD4B4B"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_role_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="ROLE"
                android:textColor="#AD4B4B"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Footer Note -->
            <TextView
                android:layout_width="331dp"
                android:layout_height="146dp"
                android:layout_marginTop="16dp"
                android:gravity="bottom|center_horizontal"
                android:text="IMPORTANT: If you need to make any changes on your profile, please contact your admin for assistance."
                android:textColor="#888888"
                android:textSize="12sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
