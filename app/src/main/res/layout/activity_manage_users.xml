<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageUsersActivity"
    android:background="@drawable/bg_gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/poppins_black"
                    android:text="@string/manage_users"
                    android:textColor="@color/primary_color"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/search_field"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_button"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/searchBtn"
                        android:layout_width="46dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/ic_search"
                        android:padding="6dp"
                        app:srcCompat="@drawable/ic_search" />

                    <EditText
                        android:id="@+id/searchProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:autofillHints="searchUser"
                        android:background="@drawable/bg_button"
                        android:ems="10"
                        android:hint="@string/search"
                        android:inputType="text"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:textColorHint="#757575" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/filterBtn"
                    android:layout_width="46dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/bg_button"
                    android:contentDescription="@string/ic_filter"
                    android:padding="6dp"
                    app:srcCompat="@drawable/ic_filter" />

                <Button
                    android:id="@+id/addUserBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="6dp"
                    android:backgroundTint="@color/primary_color"
                    android:background="@drawable/bg_button"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="@string/add_user"
                    app:icon="@drawable/ic_add_user" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:padding="8dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/id"
                        android:textAllCaps="true"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/primary_color"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:padding="6dp" />

                    <TextView
                        android:text="@string/name"
                        android:textAllCaps="true"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/primary_color"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="6dp" />

                    <TextView
                        android:text="@string/role"
                        android:textAllCaps="true"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/primary_color"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="6dp" />

                    <TextView
                        android:text="@string/action"
                        android:textAllCaps="true"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/primary_color"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="6dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gr_lower">

                    <TextView
                        android:text="@string/sample_id"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/black"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.3"
                        android:padding="6dp"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:text="@string/user_name"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/black"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:padding="6dp"
                        android:gravity="start|center_vertical"/>

                    <TextView
                        android:text="@string/user"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/black"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.5"
                        android:padding="6dp"
                        android:gravity="center_vertical"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center|center_vertical"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/editBtn"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="2dp"
                            android:backgroundTint="#FF9800"
                            android:contentDescription="@string/edit"
                            android:src="@drawable/ic_edit_changes"
                            android:scaleType="fitCenter"
                            app:cornerRadius="10dp"
                            android:elevation="2dp"
                            tools:ignore="ButtonStyle,TextContrastCheck,ImageContrastCheck" />

                        <ImageButton
                            android:id="@+id/deleteBtn"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="2dp"
                            android:backgroundTint="@color/cancel_color"
                            android:contentDescription="@string/delete"
                            android:elevation="2dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_delete_changes"
                            app:cornerRadius="10dp"
                            tools:ignore="ButtonStyle,TextContrastCheck,ImageContrastCheck" />

                    </LinearLayout>

                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>